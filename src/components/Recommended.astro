        target="_blank"
        rel="noopener noreferrer"
        class="bg-[#2F2F2F] rounded-md overflow-hidden transition-transform hover:scale-[1.02]"
      >
        <div class="relative">
          <img
            src={item.thumbnail}
            alt={item.title}
            class="w-full h-[180px] object-cover"
          />
          <div class="absolute top-2 left-2">
            <img src="/images/icon-cp.svg" class="w-5" alt="Logo" />
          </div>
          <div class="absolute top-2 right-2 text-white text-sm bg-black/60 px-2 py-0.5 rounded">
