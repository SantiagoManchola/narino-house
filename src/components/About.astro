---
const aboutItems = [
  { label: 'Creado por:', value: 'Cuestión Pública' },
  { label: 'Elenco:', value: 'Verónica Alcocer, Gustavo Petro, Laura Sarabia, Armando Benedetti, Roy Barreras, Julián Bedoya' },
  { label: 'Géneros:', value: 'Series sobre política, Series dramáticas, Series de Colombia' },
  { label: 'Este título es:', value: 'Complejo, Sombrío' },
];
---

<section class="text-white border-t border-white/20 py-12 lg:mx-20">
  <h2 class="text-2xl font-semibold mb-6">Acerca de House of Nariño</h2>

  <div class="space-y-3 text-sm lg:text-base">
    {aboutItems.map(item => (
      <p>
        <span class="text-white/60">{item.label}</span>
        <span class="ml-1">{item.value}</span>
      </p>
    ))}

    <p class="flex items-center gap-2 flex-wrap">
      <span class="text-white/60">Clasificación por edad:</span>
      <span class="px-2 py-0.5 border border-white/50 rounded text-sm font-semibold">16+</span>
      <span>violencia, sexo, lenguaje inapropiado</span>
      <span class="hidden sm:inline">Apta para mayores de 16 años</span>
    </p>
  </div>

  <div class="mt-12 flex justify-center py-16">
    <img src="/images/icon-cp-white.svg" alt="Cuestión Pública" class="h-16" />
  </div>
</section>
